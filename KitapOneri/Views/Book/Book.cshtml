@using KitapOneri.Data.Entities
@model List<Category>


<div class="row">
    <div class="col-4">
        <h3>Categories</h3>
        <div class="list-group" id="list-tab" role="tablist">
            @foreach (var item in Model)
            {
                <a class="list-group-item list-group-item-action" id="list-home-list" data-bs-toggle="list" href="#model-@item.CategoryId" role="tab" aria-controls="list-home">@item.CategoryName</a>
            }


