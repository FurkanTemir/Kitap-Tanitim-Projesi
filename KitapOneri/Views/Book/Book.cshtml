        </div>
    </div>

    <div class="col-8">
        <h3>Books</h3>
        <div class="tab-content" id="nav-tabContent">
            @foreach (var item in Model)
            {
                <div class="tab-pane fade" id="model-@item.CategoryId" role="tabpanel" aria-labelledby="list-home-list">
                     @if(item.Books != null){
                        @foreach (var book in item.Books)
                        {
                            <a asp-action="Details" asp-controller="Book" asp-route-bookId="@book.BookId">
                                <div class="">@book.BookName</div>
                                <img src="@book.BookImage" width="200" height="250" alt="" />
                            </a>
                        }
                    }
                    else
                    {
                        <span>Bu kategoride ürün bulunamadı.</span>
                    } 

                </div>
            }


