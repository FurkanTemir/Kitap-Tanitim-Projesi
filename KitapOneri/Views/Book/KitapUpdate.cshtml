@model Book

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add Book</p>

                                <form asp-action="KitapUpdate" asp-controller="Book" class="mx-1 mx-md-4" method="post">
                                    <input type="hidden" asp-for="BookId" />

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" asp-for="BookName" class="form-control" />
                                            <label class="form-label" asp-for="BookName">Book Name</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" asp-for="AuthorName" class="form-control" />
                                            <label class="form-label" asp-for="AuthorName">Author Name</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="CategoryId">Select Category</label>
                                        <select class="form-control" asp-for="CategoryId">
                                            @foreach (var item in ViewBag.Categories)
                                            {
                                                if (item.CategoryId == Model.CategoryId)
                                                {
                                                    <option selected value="@item.CategoryId">@item.CategoryName</option>
                                                }

                                                {
                                                    <option value="@item.CategoryId">@item.CategoryName</option>
                                                }

                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="BookImage">Example file input</label>
                                        <input type="file" class="form-control-file" asp-for="BookImage">
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="BookDescription">Example textarea</label>
                                            <textarea class="form-control" asp-for="BookDescription" rows="3"></textarea>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button class="btn btn-primary btn-lg">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


